@inherits LayoutComponentBase
@using BZDesktopApp.Services
@inject AuthenticationService AuthService
@inject NavigationManager Navigation

<div class="flex h-screen bg-gray-50">
    <div class="w-64 bg-white shadow-lg overflow-y-auto">
        <NavMenu />
    </div>

    <main class="flex-1 overflow-hidden flex flex-col">
        <div class="bg-white shadow-sm border-b border-gray-200 px-6 py-4 flex justify-between items-center">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-primary-600 hover:text-primary-700 font-medium transition-colors">
                About
            </a>
            <button 
                @onclick="HandleLogout"
                class="bg-red-500 hover:bg-red-600 active:bg-red-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-200">
                Logout
            </button>
        </div>

        <article class="flex-1 overflow-y-auto p-6">
            @Body
        </article>
    </main>
</div>

@code {
    private void HandleLogout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/", replace: true);
    }
}
