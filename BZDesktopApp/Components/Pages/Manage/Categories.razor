@page "/categories"
@using System.Globalization
@using BZDesktopApp.Shared.Dtos

<AuthGuard>
    <div class="grid grid-cols-1 lg:grid-cols-4 md:grid-cols-2 gap-3">
        <!-- Total Categories Card -->
        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="w-5 h-5 text-white">
                            <path d="M19.5 21a3 3 0 003-3v-4.5a3 3 0 00-3-3h-15a3 3 0 00-3 3V18a3 3 0 003 3h15zM1.5 10.146V6a3 3 0 013-3h5.379a2.25 2.25 0 011.59.659l2.122 2.121c.14.141.331.22.53.22H19.5a3 3 0 013 3v1.146A4.483 4.483 0 0019.5 9h-15a4.483 4.483 0 00-3 1.146z" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Total Categories</h2>
            </div>

            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@(summary?.TotalCount ?? 0)</h3>
                <p class="text-xs text-gray-500 mt-1">As of today</p>

                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-green-600 px-2 py-1 rounded text-xs font-medium">
                        <span>
                            + @(summary != null && summary.TotalCount > 0
                                                        ? Math.Round((double)summary.ActiveCount / summary.TotalCount * 100, 1)
                                                        : 0)% Active
                        </span>
                    </div>
                    <div class="flex items-center text-red-600 px-2 py-1 text-xs font-medium">
                        <span>
                            - @(summary != null && summary.TotalCount > 0
                                                        ? Math.Round((double)summary.InactiveCount / summary.TotalCount * 100, 1)
                                                        : 0)% Inactive
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- No. of Subcategories Card -->
        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="w-5 h-5 text-white">
                            <path fill-rule="evenodd" d="M4.848 2.771A49.144 49.144 0 0112 2.25c2.43 0 4.817.178 7.152.52 1.978.292 3.348 2.024 3.348 3.97v6.02c0 1.946-1.37 3.678-3.348 3.97a48.901 48.901 0 01-3.476.383.39.39 0 00-.297.17l-2.755 4.133a.75.75 0 01-1.248 0l-2.755-4.133a.39.39 0 00-.297-.17 48.9 48.9 0 01-3.476-.384c-1.978-.29-3.348-2.024-3.348-3.97V6.741c0-1.946 1.37-3.68 3.348-3.97zM6.75 8.25a.75.75 0 01.75-.75h9a.75.75 0 010 1.5h-9a.75.75 0 01-.75-.75zm.75 2.25a.75.75 0 000 1.5H12a.75.75 0 000-1.5H7.5z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">No. of Subcategories</h2>
            </div>

            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">
                    @(summary?.SubActiveCount + summary?.SubInactiveCount ?? 0)
                </h3>
                <p class="text-xs text-gray-500 mt-1">Total Subcategories</p>

                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-blue-600 px-2 py-1 rounded text-xs font-medium">
                        <span>@summary?.ProductCount Product</span>
                    </div>
                    <div class="flex items-center text-purple-600 px-2 py-1 text-xs font-medium">
                        <span>@summary?.ServiceCount Service</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Categories Card -->
        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="w-5 h-5 text-white">
                            <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Active Categories</h2>
            </div>

            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@(summary?.ActiveCount ?? 0)</h3>
                <p class="text-xs text-gray-500 mt-1">Currently Active</p>

                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-green-600 px-2 py-1 rounded text-xs font-medium">
                        <span>@summary?.MainActiveCount Main</span>
                    </div>
                    <div class="flex items-center text-blue-600 px-2 py-1 text-xs font-medium">
                        <span>@summary?.SubActiveCount Sub</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inactive Categories Card -->
        <div class="bg-white rounded-xl shadow-sm p-5 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="w-5 h-5 text-white">
                            <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm-1.72 6.97a.75.75 0 10-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 101.06 1.06L12 13.06l1.72 1.72a.75.75 0 101.06-1.06L13.06 12l1.72-1.72a.75.75 0 10-1.06-1.06L12 10.94l-1.72-1.72z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Inactive Categories</h2>
            </div>

            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@(summary?.InactiveCount ?? 0)</h3>
                <p class="text-xs text-gray-500 mt-1">Currently Inactive</p>

                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-red-600 px-2 py-1 rounded text-xs font-medium">
                        <span>@summary?.MainInactiveCount Main</span>
                    </div>
                    <div class="flex items-center text-orange-600 px-2 py-1 text-xs font-medium">
                        <span>@summary?.SubInactiveCount Sub</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden border border-gray-200 mt-3">
        <div class="bg-white dark:bg-gray-800 rounded-t-xl shadow-sm border border-gray-100 dark:border-gray-700 p-6">
            <!-- Header Section -->
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 mb-6">
                <!-- Title Section -->
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-primary/10 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-primary">
                            <path d="M3.375 3C2.339 3 1.5 3.84 1.5 4.875v.75c0 1.036.84 1.875 1.875 1.875h17.25c1.035 0 1.875-.84 1.875-1.875v-.75C22.5 3.839 21.66 3 20.625 3H3.375Z" />
                            <path fill-rule="evenodd" d="m3.087 9 .54 9.176A3 3 0 0 0 6.62 21h10.757a3 3 0 0 0 2.995-2.824L20.913 9H3.087Zm6.163 3.75A.75.75 0 0 1 10 12h4a.75.75 0 0 1 0 1.5h-4a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
                        </svg>


                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-primary dark:text-white">Category List</h2>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Manage product categories efficiently</p>
                    </div>
                </div>

                <!-- Search Section -->
                @* <div class="flex-1 max-w-xl">
                    <form class="w-full">
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>
                            <input type="search"
                                   class="block w-full pl-12 pr-28 py-3.5 text-sm text-gray-900 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all duration-200 dark:text-white dark:placeholder-gray-400"
                                   placeholder="Search categories ..."
                                   required />
                            <button type="submit"
                                    class="absolute right-2 top-1/2 transform -translate-y-1/2 px-4 py-2 text-sm font-medium text-white bg-primary hover:bg-emerald-600 rounded-lg transition-all duration-200 focus:ring-2 focus:ring-primary/20 flex items-center gap-2 cursor-pointer">
                                Search
                            </button>
                        </div>
                    </form>
                </div> *@

                <!-- Action Buttons -->
                <div class="flex items-center gap-3">
                    <!-- Add Categories Button -->
                    <button type="button"
                            data-modal-target="addCategoryModal"
                            data-modal-toggle="addCategoryModal"
                            class="px-4 py-3 bg-primary hover:bg-emerald-600 text-white rounded-xl text-sm font-medium transition-all duration-200 shadow-sm hover:shadow-md focus:ring-2 focus:ring-primary/20 flex items-center gap-2 cursor-pointer">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Categories
                    </button>

                    <!-- Flowbite Modal -->
                    <div id="addCategoryModal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
                         class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-700/70 dark:bg-opacity-80 backdrop-blur-sm">
                        <div class="relative p-4 max-w-4xl w-full">
                            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 border border-gray-200 dark:border-gray-600">
                                <!-- Header -->
                                <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-200 rounded-t dark:border-gray-600">
                                    <div>
                                        <h3 class="text-xl font-semibold text-primary dark:text-white">
                                            @((editingCategory == null) ? "Add New Category" : "Edit Category")
                                        </h3>
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                                            Please fill up all the required fields to @((editingCategory == null) ? "add" : "edit") category.
                                        </p>
                                    </div>
                                    <button type="button"
                                            class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                            data-modal-hide="addCategoryModal">
                                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                                             viewBox="0 0 14 14">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                                        </svg>
                                        <span class="sr-only">Close modal</span>
                                    </button>
                                </div>

                                <!-- Modal Body -->
                                <EditForm Model="categoryForm" OnValidSubmit="HandleCreateOrUpdate" class="p-4 md:p-5">
                                    <DataAnnotationsValidator />
                                    <ValidationSummary />

                                    <div class="overflow-y-auto max-h-[60vh] space-y-4">
                                        <!-- Category Name -->
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-2">Category Name</label>
                                            <InputText @bind-Value="categoryForm.Name"
                                                       class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500" />
                                        </div>

                                        <!-- Category Type & Parent -->
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">Category Type</label>
                                                <InputSelect @bind-Value="categoryForm.CategoryType"
                                                             class="w-full px-4 py-3 border rounded-xl focus:ring-2 focus:ring-blue-500">
                                                    <option value="Product">Product</option>
                                                    <option value="Service">Service</option>
                                                </InputSelect>
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">Parent Category</label>
                                                <InputSelect @bind-Value="categoryForm.ParentId"
                                                             class="w-full px-4 py-3 border rounded-xl focus:ring-2 focus:ring-blue-500">
                                                    <option value="">None</option>
                                                    @foreach (var parent in ParentCategories)
                                                    {
                                                        <option value="@parent.Id">@parent.Name</option>
                                                    }
                                                </InputSelect>
                                            </div>
                                        </div>

                                        <!-- Description -->
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                                            <InputTextArea @bind-Value="categoryForm.Description" rows="3"
                                                           class="w-full px-4 py-3 border rounded-xl focus:ring-2 focus:ring-blue-500" />
                                        </div>

                                        <!-- Status -->
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                                            <div class="flex items-center gap-3 px-3 py-2 bg-gray-50 border rounded-xl">
                                                <input type="checkbox" @bind="categoryForm.IsActive"
                                                       class="h-5 w-5 text-blue-600 border-gray-300 rounded" />
                                                <label class="text-sm text-gray-800 select-none cursor-pointer">Active</label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Footer -->
                                    <div class="mt-6 flex justify-end gap-3 border-t border-gray-200 pt-4">
                                        <button type="button" data-modal-hide="addCategoryModal"
                                                class="px-4 py-3 border rounded-xl text-gray-700 hover:bg-gray-100 transition-colors">
                                            Cancel
                                        </button>
                                        <button type="submit"
                                                class="px-4 py-3 bg-primary hover:bg-emerald-700 text-white rounded-xl font-medium shadow-sm"
                                                disabled="@isSubmitting">
                                            @(editingCategory == null ? "Create Category" : "Update Category")
                                        </button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>


                    <!-- Export Button -->
                    <a href="#"
                       class="px-4 py-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl text-sm text-gray-700 dark:text-gray-300 font-medium transition-all duration-200 shadow-sm hover:shadow-md hover:bg-gray-50 dark:hover:bg-gray-600 focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-600 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Export
                    </a>
                </div>
            </div>

            <!-- Filters Section -->
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-xl border border-gray-200 dark:border-gray-600 p-5">
                <!-- Filters Header -->
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.207A1 1 0 013 6.5V4z" />
                        </svg>
                        <h3 class="font-semibold text-gray-900 dark:text-white">Filter Options</h3>
                    </div>
                    <span class="text-xs text-gray-500 dark:text-gray-400 px-2 py-1 bg-white dark:bg-gray-600 rounded-lg">2 filters</span>
                </div>

                <!-- Filters Form -->
                <form @onsubmit="ApplyFilters" class="flex flex-col lg:flex-row lg:items-end justify-between gap-4">
                    <!-- Filter Controls -->
                    <div class="flex flex-col sm:flex-row gap-4 flex-1">
                        <!-- Type Select -->
                        <div class="flex flex-col gap-2">
                            <label for="selectedType" class="text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">
                                Category Type
                            </label>
                            <div class="relative">
                                <select id="selectedType"
                                        @bind="selectedType"
                                        class="w-full min-w-[200px] appearance-none text-gray-900 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-xl py-3 px-4 pr-10 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all duration-200 cursor-pointer shadow-sm">
                                    <option value="all">All Types</option>
                                    <option value="Product">Product</option>
                                    <option value="Service">Service</option>
                                </select>
                            </div>
                        </div>

                        <!-- Status Filter -->
                        <div class="flex flex-col gap-2">
                            <label for="catgoriesStatusSelect" class="text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">
                                Status
                            </label>
                            <div class="relative">
                                <select id="catgoriesStatusSelect"
                                        @bind="selectedStatus"
                                        class="w-full min-w-[200px] appearance-none text-gray-900 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-xl py-3 px-4 pr-10 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all duration-200 cursor-pointer shadow-sm">
                                    <option value="all">All</option>
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>
                        </div>

                        <!-- Search -->
                        <div class="flex flex-col gap-2">
                            <label for="search" class="text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">
                                Search
                            </label>
                            <input id="search"
                                   @bind="search"
                                   placeholder="Search category..."
                                   class="w-full min-w-[200px] text-gray-900 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-xl py-3 px-4 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all duration-200 shadow-sm" />
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center gap-3 pt-2">
                        <!-- Filter Button -->
                        <button type="submit"
                                class="px-5 py-3 bg-primary hover:bg-emerald-600 text-white rounded-xl text-sm font-medium transition-all duration-200 shadow-sm hover:shadow-md focus:ring-2 focus:ring-primary/20 flex items-center gap-2 cursor-pointer">
                            Apply Filters
                        </button>

                        <!-- Reset Button -->
                        <button type="button"
                                @onclick="ResetFilters"
                                class="px-4 py-3 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-xl text-sm text-gray-700 dark:text-gray-300 font-medium transition-all duration-200 shadow-sm hover:shadow-md hover:bg-gray-50 dark:hover:bg-gray-500 focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-600 flex items-center gap-2 cursor-pointer">
                            Reset
                        </button>
                    </div>
                </form>
            </div>
        </div>


        <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200 text-sm text-left">   
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">Category Name</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">Type</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">To do</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">To do</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">Total Products</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">Inventory Value</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">Status</th>
                        <th class="px-6 py-3 text-left font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>

                <tbody class="bg-white divide-y divide-gray-100">
                    @if (categories == null || categories.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="px-6 py-8 text-center text-gray-500">
                                <div class="flex flex-col items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-400 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M9.75 9V5.25a.75.75 0 01.75-.75h4.5a.75.75 0 01.75.75V9M4.5 9h15a.75.75 0 01.75.75v9.75a.75.75 0 01-.75.75h-15a.75.75 0 01-.75-.75V9.75A.75.75 0 014.5 9z" />
                                    </svg>
                                    <p class="text-sm text-gray-500 font-medium">
                                        No categories found.
                                    </p>
                                </div>
                            </td>
                        </tr>
