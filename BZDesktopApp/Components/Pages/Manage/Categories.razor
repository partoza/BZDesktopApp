@using BZDesktopApp.Shared

@code {
    private List<CategoryDto> categories = new();
    private CategorySummaryDto? summary;
    private CategoryForm categoryForm = new();
    private CategoryDto? editingCategory = null;

    // Only categories that are NOT children (ParentId == null)
    private List<CategoryDto> ParentCategories => categories.Where(c => c.ParentId == null).ToList();

    // Filter state (bound to your filter UI)
    private string search = "";
    private string selectedType = "all";   
    private string selectedStatus = "all"; 

    private bool isSubmitting = false;

    [Inject] private HttpClient Http { get; set; } = default!;
    [Inject] private IJSRuntime JS { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize modal after first render so it's available in the DOM
            await JS.InvokeVoidAsync("initCategoryModal", "addCategoryModal");
        }
    }

    private async Task LoadCategories()
    {
        try
        {
            // Build query string only including non-default filters
            var queryParams = new List<string>();
            if (!string.IsNullOrWhiteSpace(search))
                queryParams.Add($"search={Uri.EscapeDataString(search)}");

            if (!string.IsNullOrWhiteSpace(selectedType) && selectedType != "all")
                queryParams.Add($"type={Uri.EscapeDataString(selectedType)}");

            if (!string.IsNullOrWhiteSpace(selectedStatus) && selectedStatus != "all")
                queryParams.Add($"status={Uri.EscapeDataString(selectedStatus)}");

            var url = "api/categories";
            if (queryParams.Any())
                url += "?" + string.Join("&", queryParams);

            summary = await Http.GetFromJsonAsync<CategorySummaryDto>(url);
            categories = summary?.Categories ?? new List<CategoryDto>();
        }
        catch (HttpRequestException ex)
        {
            Console.WriteLine($"Failed to load categories: {ex.Message}");
            summary = new CategorySummaryDto();
            categories = new List<CategoryDto>();
        }
    }

    private void OpenAddModal(CategoryDto? category = null)
    {
        editingCategory = category;

        if (category != null)
        {
            categoryForm = new CategoryForm
            {
                Name = category.Name,
                CategoryType = category.CategoryType,
                ParentId = category.ParentId,
                Description = category.Description,
                IsActive = category.Status == "Active"
            };
        }
        else
        {
            categoryForm = new CategoryForm();
        }
    }

    private async Task HandleCreateOrUpdate()
    {
        isSubmitting = true;
        try
        {
            if (editingCategory == null)
            {
                // Create
                var response = await Http.PostAsJsonAsync("api/categories", categoryForm);
                if (response.IsSuccessStatusCode)
                {
                    await LoadCategories();
                    editingCategory = null;
                }
            }
            else
            {
                // Update local DTO from form then send PUT
                editingCategory.Name = categoryForm.Name;
                editingCategory.CategoryType = categoryForm.CategoryType;
                editingCategory.ParentId = categoryForm.ParentId;
                editingCategory.Description = categoryForm.Description;
                editingCategory.Status = categoryForm.IsActive ? "Active" : "Inactive";

                var response = await Http.PutAsJsonAsync($"api/categories/{editingCategory.Id}", editingCategory);
                if (response.IsSuccessStatusCode)
                {
                    await LoadCategories();
                    editingCategory = null;
                }
            }

            // Close modal after submit
            await JS.InvokeVoidAsync("closeCategoryModal", "addCategoryModal");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    // Called by your "Apply Filters" button/form
    private async Task ApplyFilters()
    {
        await LoadCategories();
    }

    // Called by your "Reset" button
    private async Task ResetFilters()
    {
        search = "";
        selectedType = "all";
        selectedStatus = "all";
        await LoadCategories();
    }

    // Helper to get parent name for table (used by markup)
    private string GetParentName(long? parentId)
    {
        if (parentId == null) return "-";
        var parent = categories.FirstOrDefault(c => c.Id == parentId.Value);
        return parent?.Name ?? "-";
    }
}

