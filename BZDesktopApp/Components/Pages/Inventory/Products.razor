@page "/products"
@using System.Globalization
@inject NavigationManager NavigationManager

<AuthGuard>
    <div class="grid grid-cols-1 lg:grid-cols-4 md:grid-cols-2 gap-3 mb-3">
        @* --- Total Products --- *@
        <div class="bg-white rounded-xl shadow-sm py-3 px-5">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="size-4 text-white">
                            <path fill-rule="evenodd"
                                  d="M1.5 9.832v1.793c0 1.036.84 1.875 1.875 1.875h17.25c1.035 0 1.875-.84 1.875-1.875V9.832a3 3 0 0 0-.722-1.952l-3.285-3.832A3 3 0 0 0 16.215 3h-8.43a3 3 0 0 0-2.278 1.048L2.222 7.88A3 3 0 0 0 1.5 9.832ZM7.785 4.5a1.5 1.5 0 0 0-1.139.524L3.881 8.25h3.165a3 3 0 0 1 2.496 1.336l.164.246a1.5 1.5 0 0 0 1.248.668h2.092a1.5 1.5 0 0 0 1.248-.668l.164-.246a3 3 0 0 1 2.496-1.336h3.165l-2.765-3.226a1.5 1.5 0 0 0-1.139-.524h-8.43Z"
                                  clip-rule="evenodd" />
                            <path d="M2.813 15c-.725 0-1.313.588-1.313 1.313V18a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3v-1.688c0-.724-.588-1.312-1.313-1.312h-4.233a3 3 0 0 0-2.496 1.336l-.164.246a1.5 1.5 0 0 1-1.248.668h-2.092a1.5 1.5 0 0 1-1.248-.668l-.164-.246A3 3 0 0 0 7.046 15H2.812Z" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Total Products</h2>
            </div>
            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@products.Count</h3>
                <p class="text-xs text-gray-500 mt-1">Real Time Total</p>
                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-green-600 text-xs">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z"
                                  clip-rule="evenodd" />
                        </svg>
                        <span>
                            @((products.Count > 0 ? (int)Math.Round((double)products.Count(p => p.ActiveStatus) / products.Count * 100) : 0))% Active
                        </span>
                    </div>
                    <div class="flex items-center text-red-600 text-xs">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z"
                                  clip-rule="evenodd" />
                        </svg>
                        <span>
                            @((products.Count > 0 ? 100 - (int)Math.Round((double)products.Count(p => p.ActiveStatus) / products.Count * 100) : 0))% Inactive
                        </span>
                    </div>
                </div>
            </div>
        </div>

        @* --- Active Products --- *@
        <div class="bg-white rounded-xl shadow-sm py-3 px-5">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-bag-check-fill size-4 text-white" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0m-.646 5.354a.5.5 0 0 0-.708-.708L7.5 10.793 6.354 9.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0z" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Active Products</h2>
            </div>
            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@products.Count(p => p.ActiveStatus)</h3>
                <p class="text-xs text-gray-500 mt-1">Currently Active</p>
                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-green-600 text-xs">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z"
                                  clip-rule="evenodd" />
                        </svg>
                        <span>@((products.Count > 0 ? (int)Math.Round((double)products.Count(p => p.ActiveStatus) / products.Count * 100) : 0))% of Total</span>
                    </div>
                </div>
            </div>
        </div>

        @* --- Inactive Products --- *@
        <div class="bg-white rounded-xl shadow-sm py-3 px-5">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg width="16" height="16" fill="currentColor" class="bi bi-bag-x-fill size-4 text-white"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0M6.854 8.146a.5.5 0 1 0-.708.708L7.293 10l-1.147 1.146a.5.5 0 0 0 .708.708L8 10.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 10l1.147-1.146a.5.5 0 0 0-.708-.708L8 9.293z" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Inactive Products</h2>
            </div>
            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@products.Count(p => !p.ActiveStatus)</h3>
                <p class="text-xs text-gray-500 mt-1">Currently Inactive</p>
                <div class="flex items-center gap-2 mt-2">
                    <div class="flex items-center text-red-600 text-xs">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z"
                                  clip-rule="evenodd" />
                        </svg>
                        <span>
                            @((products.Count > 0 ? 100 - (int)Math.Round((double)products.Count(p => p.ActiveStatus) / products.Count * 100) : 0))% of Total
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm py-3 px-5 border border-gray-200 relative">
            <div class="flex items-center gap-3 mb-1">
                <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-emerald-600 to-emerald-500 flex items-center justify-center"
                         style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                             class="size-4 text-white">
                            <path fill-rule="evenodd"
                                  d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z"
                                  clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-base font-medium text-gray-700">Low/Out of Stock</h2>
            </div>

            <div class="ps-14">
                <h3 class="text-2xl font-semibold text-gray-900">@products.Count(p => p.StockCount <= 5)</h3>
                <p class="text-xs text-gray-500 mt-1">Need Restock</p>

                <div class="relative inline-block group mt-1" tabindex="0" aria-label="Low stock">
                    @* Status badge *@
                    <span class="flex items-center text-xs cursor-pointer px-2 py-1 rounded-lg
                         @(products.Count == 0 ? "bg-sky-100 text-sky-700" :
                                                     products.Count(p => p.StockCount <= 5) > 0 ? "bg-yellow-100 text-yellow-700" :
                                                     "bg-green-100 text-green-700")">
                        <svg class="size-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            @if (products.Count == 0)
                            {
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2" />
                            }
                            else if (products.Count(p => p.StockCount <= 5) > 0)
                            {
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.721-1.36 3.486 0l6.518 11.593c.75 1.335-.213 2.983-1.743 2.983H3.482c-1.53 0-2.493-1.648-1.743-2.983L8.257 3.1zM10 6.5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 6.5zm0 7.75a.75.75 0 100 1.5.75.75 0 000-1.5z" clip-rule="evenodd" />
                            }
                            else
                            {
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            }
                        </svg>

                        <span>
                            @(products.Count == 0 ? "No Existing Product" :
                                                        products.Count(p => p.StockCount <= 5) > 0 ? "Attention Needed" :
                                                        "All Products in Stock")
                        </span>
                    </span>

                    @* Tooltip: list of low-stock products *@
                    @if (products.Any(p => p.StockCount <= 5))
                    {
                        <div class="z-50 pointer-events-none opacity-0 group-hover:opacity-100 group-focus:opacity-100
                                transition-opacity duration-150 absolute top-full mt-3 left-1 transform -translate-x-1/2
                                w-80 bg-white border border-gray-200 rounded-lg shadow-lg p-3 text-sm text-gray-700">
                            <div class="font-medium text-red-600 mb-2">Products Needing Restock</div>
                            <div class="space-y-1 max-h-36 overflow-auto">
                                @foreach (var p in products.Where(p => p.StockCount <= 5).OrderBy(p => p.StockCount))
                                {
                                    <div class="flex items-start justify-between py-1">
                                        <div class="flex items-start gap-3 min-w-0 flex-1">
                                            <span class="w-2 h-2 rounded-full @(p.StockCount == 0 ? "bg-red-400" : "bg-yellow-400") inline-block mt-1"></span>
                                            <span class="tooltip-name text-xs text-gray-600">@p.ProductName</span>
                                        </div>
                                        <div class="flex-shrink-0 ms-3">
                                            <span class="font-semibold text-gray-800 text-xs whitespace-nowrap">
                                                @(p.StockCount == 0 ? "Out of Stock" : $"{p.StockCount} left")
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm overflow-hidden mt-3">
        <!-- Header: Title + Search + Action Buttons -->
        <div class="bg-white dark:bg-gray-800 rounded-t-xl shadow-sm p-6">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 mb-6">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-primary/10 rounded-full">
                        <!-- Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-primary">
                            <path d="M12.378 1.602a.75.75 0 0 0-.756 0L3 6.632l9 5.25 9-5.25-8.622-5.03ZM21.75 7.93l-9 5.25v9l8.628-5.032a.75.75 0 0 0 .372-.648V7.93ZM11.25 22.18v-9l-9-5.25v8.57a.75.75 0 0 0 .372.648l8.628 5.033Z" />
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-primary dark:text-white">Product List</h2>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Manage products efficiently</p>
                    </div>
                </div>

                <!-- Search -->
                <div class="flex-1 max-w-xl">
                    <form class="w-full" @onsubmit="SearchProducts">
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>
                            <input type="search" placeholder="Search products ..." class="block w-full pl-12 pr-28 py-3.5 text-sm text-gray-900 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all duration-200 dark:text-white dark:placeholder-gray-400" @bind="searchText" />
                            <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 px-4 py-2 text-sm font-medium text-white bg-primary hover:bg-emerald-600 rounded-lg transition-all duration-200 focus:ring-2 focus:ring-primary/20 flex items-center gap-2 cursor-pointer">
                                Search
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center gap-3">
                    <button class="px-4 py-3 bg-primary hover:bg-emerald-600 text-white rounded-xl text-sm font-medium transition-all duration-200 shadow-sm hover:shadow-md focus:ring-2 focus:ring-primary/20 flex items-center gap-2 cursor-pointer"
                            @onclick="@(() => NavigationManager.NavigateTo("/addProduct"))">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Product
                    </button>

                    <a href="#" class="px-4 py-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl text-sm text-gray-700 dark:text-gray-300 font-medium transition-all duration-200 shadow-sm hover:shadow-md hover:bg-gray-50 dark:hover:bg-gray-600 focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-600 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Export
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-xl p-5">
                <form class="flex flex-col lg:flex-row lg:items-end justify-between gap-4" @onsubmit="ApplyFilters">
                    <div class="flex flex-col sm:flex-row gap-4 flex-1">
                        <!-- Category -->
                        <div class="flex flex-col gap-2">
                            <label class="text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">Category</label>
                            <select class="w-full min-w-[200px] rounded-xl border border-gray-300 dark:border-gray-500 py-3 px-4 text-sm" @bind="selectedCategory">
                                <option value="all">All Categories</option>
                                @foreach (var c in categories)
                                {
                                    <option value="@c.Name">@c.Name</option>
                                }
                            </select>
                        </div>
                        <!-- Status -->
                        <div class="flex flex-col gap-2">
                            <label class="text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">Status</label>
                            <select class="w-full min-w-[200px] rounded-xl border border-gray-300 dark:border-gray-500 py-3 px-4 text-sm" @bind="selectedStatus">
                                <option value="all">All Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <!-- Brand -->
                        <div class="flex flex-col gap-2">
                            <label class="text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">Brand</label>
                            <select class="w-full min-w-[200px] rounded-xl border border-gray-300 dark:border-gray-500 py-3 px-4 text-sm" @bind="selectedBrand">
                                <option value="all">All Brands</option>
                                @foreach (var b in brands)
                                {
                                    <option value="@b.Name">@b.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="flex items-center gap-3 pt-2">
                        <button type="submit" class="px-5 py-3 bg-primary hover:bg-emerald-600 text-white rounded-xl text-sm font-medium">Apply Filters</button>
                        <button type="button" class="px-4 py-3 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded-xl text-sm" @onclick="ResetFilters">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Products Table -->
        <div class="overflow-hidden mb-2">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Product Name</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Brand</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Category</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Price</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Stock Left</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Stock Status</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Status</th>
                        <th class="px-6 py-5 text-left font-medium text-gray-700 uppercase tracking-wide">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    @if (products != null && products.Any())
                    {
                        @foreach (var product in products)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 flex items-center gap-3">
                                    <img src="images/background/@product.ImageUrl" class="w-10 h-10 rounded-full object-cover" />
                                    <span>@product.ProductName</span>
                                </td>
                                <td class="px-6 py-4">@product.BrandName</td>
                                <td class="px-6 py-4">@product.CategoryName</td>
                                <td class="px-6 py-4">₱ @product.Price</td>

                                <td class="px-6 py-4">@product.StockCount</td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 rounded-full text-xs font-medium
                     @(product.StockCount == 0 ? "bg-red-100 text-red-700" :
                                                         product.StockCount <= 5 ? "bg-yellow-100 text-yellow-700" :
                                                         "bg-green-100 text-green-700")">
                                        @(product.StockCount == 0 ? "Out of Stock" :
                                                                        product.StockCount <= 5 ? "Low" :
                                                                        "Sufficient")
                            </span>

                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2.5 py-0.5 text-xs font-medium rounded-full @(product.ActiveStatus ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                        @(product.ActiveStatus ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="px-6 py-4 align-middle">
                                    <div class="flex space-x-2">
                                        <!-- View Button -->
                                        <div class="relative group">
                                            <button class="text-gray-600 hover:text-primary/90 transition-colors duration-200 p-1 rounded cursor-pointer">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                                     fill="currentColor">
                                                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                                    <path fill-rule="evenodd"
                                                          d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                                                          clip-rule="evenodd" />
                                                </svg>
                                            </button>
                                            <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 text-xs text-white bg-primary rounded opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap pointer-events-none z-10">
                                                View Product
                                                <div class="absolute top-full left-1/2 transform -translate-x-1/2 border-4 border-transparent border-t-primary">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Edit Button -->
                                        <div class="relative group">
                                            <button class="text-gray-600 hover:text-primary/90 transition-colors duration-200 p-1 rounded cursor-pointer">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
