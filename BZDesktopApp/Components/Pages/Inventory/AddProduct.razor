@page "/addProduct"
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <div class="flex items-center gap-3">
            <div class="p-2 bg-primary/10 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-seam-fill size-6 text-primary" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.269.108.01.003zM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z" />
                </svg>
            </div>
            <div>
                <h2 class="text-xl font-semibold text-primary">Add New Product</h2>
                <p class="text-sm text-gray-500 mt-1">Fill all required fields to publish a product.</p>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <button type="button"
                    onclick="history.back()"
                    class="px-4 py-3 bg-white border border-gray-200 rounded-xl text-sm text-gray-700 font-medium transition-all duration-200 shadow-sm hover:shadow-md hover:bg-gray-50 focus:ring-2 focus:ring-gray-200/20 focus:border-gray-200 flex items-center gap-2 cursor-pointer">
                Back
            </button>
            <button type="button"
                    onclick="document.getElementById('addProductForm').reset();"
                    class="px-4 py-3 bg-red-50 border border-red-200 rounded-xl text-sm text-red-600 font-medium transition-all duration-200 shadow-sm hover:shadow-md hover:bg-red-100 focus:ring-2 focus:ring-red-200/20 focus:border-red-200 flex items-center gap-2 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
                    <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                </svg>
                Discard
            </button>
        </div>
    </div>
</div>

<div class="mb-5">
    <form id="addProductForm">
        <div class="mt-3">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                <!-- Product Information -->
                <div class="lg:col-span-2 bg-white py-4 px-6 rounded-lg shadow-sm">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Product Information</h3>

                    <!-- Product Name -->
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-medium text-gray-700">Product Name</label>
                        <input type="text"
                               name="product_name"
                               class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm text-gray-900 placeholder:text-gray-400 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all"
                               placeholder="Intel Core i9 12th Gen" required />
                        <div id="productNameError" class="text-sm text-red-600 mt-1 hidden">Product name is required</div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-medium text-gray-700">Description</label>
                        <textarea name="description"
                                  rows="4"
                                  class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm text-gray-900 placeholder:text-gray-400 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all"
                                  placeholder="Enter product description..." required></textarea>
                        <div id="productDescriptionError" class="text-sm text-red-600 mt-1 hidden">Description is required</div>
                    </div>

                    <div class="gap-5 grid grid-cols-1 md:grid-cols-2">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Product Image</h3>

                            <input type="file" accept="image/*" id="productImageInput" class="hidden" name="image" />

                            <div id="productImageArea"
                                 onclick="document.getElementById('productImageInput').click()"
                                 class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors">
                                <div id="productImagePreviewContainer" class="flex flex-col items-center justify-center pt-5 pb-6">
                                    <svg class="w-8 h-8 mb-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M13 13h3a3 3 0 000-6h-.025A5.56 5.56 0 0016 6.5 5.5 5.5 0 005.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 000 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
                                    </svg>
                                    <p class="mb-2 text-sm text-gray-500 text-center">
                                        <span class="font-medium">Click to upload</span> or drag and drop
                                    </p>
                                    <p class="text-xs text-gray-500">PNG, JPG (MAX. 5MB)</p>
                                </div>
                            </div>
                            <div id="productImageError" class="text-sm text-red-600 mt-2 hidden">Product image is required</div>
                            <div class="flex flex-row gap-2 mt-4">
                                <button type="button"
                                        onclick="document.getElementById('productImageInput').click()"
                                        class="w-full text-white bg-primary hover:bg-emerald-600 focus:ring-2 focus:ring-primary/20 font-medium rounded-lg text-sm px-4 py-2.5 text-center transition-all">
                                    Change Image
                                </button>
                                <button type="button"
                                        onclick="resetImagePreview()"
                                        class="w-full py-2.5 px-4 text-sm font-medium text-gray-700 bg-white rounded-lg border border-gray-300 hover:bg-gray-50 focus:ring-2 focus:ring-gray-200 transition-all">
                                    Reset
                                </button>
                            </div>
                        </div>
                        <div>
                            <div class="grid grid-row-1 md:grid-row-2 gap-4">
                                <h3 class="text-lg font-semibold text-gray-900 mb-3">Pricing</h3>

                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-700">Base Price (₱)</label>
                                    <input type="number"
                                           step="0.01"
                                           min="0"
                                           name="base_price"
                                           class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm text-gray-900 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all"
                                           required />
                                    <div id="basePriceError" class="text-sm text-red-600 mt-1 hidden">Base price is required</div>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-700">Discounted Price (₱)</label>
                                    <input type="number"
                                           step="0.01"
                                           min="0"
                                           name="discounted_price"
                                           class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-sm text-gray-600 focus:ring-0 focus:border-gray-300 cursor-not-allowed"
                                           disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="flex flex-col space-y-3">
                    <!-- Classification -->
                    <div class="bg-white rounded-lg shadow-sm p-6 py-4">
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Classification</h3>
                        <div class="space-y-4">
                            <!-- Brand -->
                            <div>
                                <label class="block mb-2 text-xs font-medium text-gray-600 uppercase tracking-wide">Brand</label>
                                <div class="flex gap-2">
                                    <select name="brand"
                                            class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all">
                                        <option value="">Select Brand</option>
                                        <option value="intel">Intel</option>
                                        <option value="amd">AMD</option>
                                    </select>
                                    <button type="button"
                                            data-modal-target="brandModal"
                                            data-modal-toggle="brandModal"
                                            class="px-3 py-2 bg-primary hover:bg-emerald-600 text-white rounded-lg flex items-center gap-2 cursor-pointer">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd"
                                                  d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                                                  clip-rule="evenodd" />
                                        </svg>
                                        Add
                                    </button>
                                </div>
                                <div id="brandError" class="text-sm text-red-600 mt-1 hidden">Brand is required</div>
                            </div>

                            <!-- Main Category -->
                            <div>
                                <label class="block mb-2 text-xs font-medium text-gray-600 uppercase tracking-wide">Main Category</label>
                                <select name="main_category"
                                        class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all">
                                    <option value="">Select Main Category</option>
                                    <option value="processor">Processor</option>
                                    <option value="memory">Memory</option>
                                </select>
                                <div id="mainCategoryError" class="text-sm text-red-600 mt-1 hidden">Main category is required</div>
                            </div>

                            <!-- Subcategory (optional) -->
                            <div>
                                <label class="block mb-2 text-xs font-medium text-gray-600 uppercase tracking-wide">Subcategory (Optional)</label>
                                <select name="subcategory"
                                        class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all">
                                    <option value="">Select Subcategory</option>
                                    <optgroup label="Processor">
                                        <option value="desktop_cpu">Desktop CPU</option>
                                        <option value="mobile_cpu">Mobile CPU</option>
                                    </optgroup>
                                    <optgroup label="Memory">
                                        <option value="ddr4">DDR4</option>
                                        <option value="ddr5">DDR5</option>
                                    </optgroup>
                                </select>
                                <div id="subCategoryError" class="text-sm text-red-600 mt-1 hidden">Subcategory is required</div>
                            </div>

                            <!-- Status -->
                            <div>
                                <label class="block mb-2 text-xs font-medium text-gray-600 uppercase tracking-wide">Status</label>
                                <div class="flex items-center justify-between mb-5 w-full px-5 py-3 border border-gray-300 rounded-lg">
                                    <span class="text-sm font-medium @StatusTextColor">
                                        @StatusText
                                    </span>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" @bind="isActive" name="active_status" class="sr-only peer" />
                                        <div class="w-11 h-6 rounded-full
        @ToggleBgColor
        peer-focus:outline-none peer-focus:ring-4 @ToggleRingColor
        after:content-[''] after:absolute after:top-[2px] after:left-[2px]
        after:bg-white after:border-gray-300 after:border after:rounded-full
        after:w-5 after:h-5 after:transition-all
        peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full
        peer-checked:after:border-white">
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additions -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 py-4">
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Additions</h3>

                        <div class="mb-4">
                            <label class="block mb-2 text-xs font-medium text-gray-600 uppercase tracking-wide">Promo Code</label>
                            <input type="text"
                                   name="promo_code"
                                   class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm text-gray-900 placeholder:text-gray-400 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all"
                                   placeholder="Enter promo code" />
                        </div>

                        <div>
                            <label class="block mb-2 text-xs font-medium text-gray-600 uppercase tracking-wide">Warranty Period</label>
                            <select name="warranty_period"
                                    class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all">
                                <option value="0">No Warranty</option>
                                <option value="3">3 Months</option>
                                <option value="6">6 Months</option>
                                <option value="12">12 Months</option>
                            </select>
                        </div>
                    </div>

                    <!-- Submit -->
                    <button type="button"
                            data-modal-target="productConfirmationModal"
                            data-modal-toggle="productConfirmationModal"
                            class="w-full px-5 py-3 bg-primary hover:bg-emerald-600 text-white rounded-lg text-md font-medium transition-all duration-200 shadow-sm hover:shadow-md focus:ring-2 focus:ring-primary/20 flex items-center justify-center gap-2 cursor-pointer">
                        Publish Product
                    </button>
                </div>
                <!-- Add Product Confirmation Modal -->
                <div id="productConfirmationModal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
                     class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-[60] justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-700/70 bg-opacity-50 dark:bg-opacity-80 backdrop-blur-sm">
                    <div class="relative p-4 w-full max-w-md max-h-full">
                        <!-- Modal content -->
                        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 border border-gray-200 dark:border-gray-600">
                            <!-- Modal header -->
                            <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-200 rounded-t dark:border-gray-600">
                                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                                    Confirm Product Addition
                                </h3>
                                <button type="button"
                                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                        data-modal-hide="productConfirmationModal">
                                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                                    </svg>
                                    <span class="sr-only">Close modal</span>
                                </button>
                            </div>

                            <!-- Modal body -->
                            <div class="p-4 md:p-5">
                                <div class="flex items-center mb-4">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-primary dark:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                        </svg>
                                    </div>
                                    <div class="ms-3">
                                        <p class="text-sm text-gray-700 dark:text-gray-300">
                                            Are you sure you want to add this new product? This action cannot be undone.
                                        </p>
                                    </div>
                                </div>

                                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-3 mb-4">
                                    <p class="text-xs text-blue-800 dark:text-blue-300">
                                        <strong>Note:</strong> The product will be added to your inventory immediately and will be available for transactions.
                                    </p>
                                </div>
                            </div>

                            <!-- Modal footer -->
                            <div class="flex items-center justify-end p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600 gap-3">
                                <button type="button" data-modal-hide="productConfirmationModal"
                                        class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 cursor-pointer">
                                    Cancel
                                </button>
                                <button type="submit" id="finalAddProductBtn"
                                        class="text-white bg-primary hover:bg-emerald-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 cursor-pointer">
                                    Yes, Add Product
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Add Brand Modal -->
<div id="brandModal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
     class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-700/70 bg-opacity-50 dark:bg-opacity-80 backdrop-blur-sm">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 border border-gray-200 dark:border-gray-600">

            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-200 rounded-t dark:border-gray-600">
                <div>
                    <h3 class="text-xl font-semibold text-primary dark:text-white">
                        Add New Brand
                    </h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                        Please fill up all the required fields to add new brand.
                    </p>
                </div>
                <button type="button"
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                        data-modal-hide="brandModal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <form id="brandForm" class="p-4 md:p-5">
                <div class="space-y-4">
                    <div>
                        <label for="brandName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                            Brand Name
                        </label>
                        <input type="text" id="brandName" name="brand_name" placeholder="Enter brand name"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                               required>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="flex items-center justify-end pt-4 border-t border-gray-200 rounded-b dark:border-gray-600 mt-6 gap-3">
                    <button type="button" data-modal-hide="brandModal"
                            class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 cursor-pointer">
                        Cancel
                    </button>
                    <button type="submit" id="saveBrandBtn"
                            class="text-white bg-primary hover:bg-emerald-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 cursor-pointer">
                        Save Brand
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


